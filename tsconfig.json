{
  "extends": "@amnis/tsconfig-node",
  "compilerOptions": {
    "baseUrl": "./",
    "types": ["node", "jest"],
    "lib": ["esnext", "dom"],
    "paths": {
      "@amnis/core/*": ["./packages/amnis-core/src/*"],
      "@amnis/db/*": ["./packages/amnis-db/src/*"],
      "@amnis/auth/*": ["./packages/amnis-auth/src/*"],
      "@amnis/api/*": ["./packages/amnis-api/src/*"],
      "@amnis/state/*": ["./packages/amnis-state/src/*"]
    }
  },
  "include": ["./packages/**/*.ts*", "./test/**/*.ts*"]
}
