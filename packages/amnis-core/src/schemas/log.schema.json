{
  "$id": "core-log",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "LogLevel": {
      "type": "string",
      "enum": [
        "fatal",
        "error",
        "warn",
        "info",
        "debug"
      ],
      "description": "Log levels."
    },
    "Log": {
      "type": "object",
      "properties": {
        "$id": {
          "$ref": "#/definitions/Reference",
          "description": "Identifier for this entity.",
          "default": ""
        },
        "created": {
          "$ref": "#/definitions/DateJSON",
          "description": "Creation date string.",
          "default": ""
        },
        "updated": {
          "$ref": "#/definitions/DateJSON",
          "description": "Updated date string.",
          "default": ""
        },
        "committed": {
          "type": "boolean",
          "description": "Flag to determine if the entity has been committed to storage.",
          "default": false
        },
        "delete": {
          "type": "boolean",
          "description": "If this entity is marked to be deleted.",
          "default": false
        },
        "$owner": {
          "$ref": "#/definitions/Reference",
          "description": "Entity that owns this data."
        },
        "$creator": {
          "$ref": "#/definitions/Reference",
          "description": "Possible user id creator of the entity."
        },
        "$updaters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference"
          },
          "description": "Entities that have updated this."
        },
        "level": {
          "$ref": "#/definitions/LogLevel",
          "description": "Level of the log."
        },
        "title": {
          "type": "string",
          "description": "Title of the log."
        },
        "description": {
          "type": "string",
          "description": "Description of the log."
        },
        "system": {
          "type": "string",
          "description": "System this log is from."
        },
        "$invoker": {
          "$ref": "#/definitions/Reference%3CUser%3E",
          "description": "Reference to a user that invoked the log."
        }
      },
      "required": [
        "$creator",
        "$id",
        "$owner",
        "$updaters",
        "committed",
        "created",
        "delete",
        "description",
        "level",
        "system",
        "title",
        "updated"
      ],
      "additionalProperties": false,
      "description": "An entity object that contains log information."
    },
    "Entity": {
      "type": "object",
      "properties": {
        "$id": {
          "$ref": "#/definitions/Reference",
          "description": "Identifier for this entity.",
          "default": ""
        },
        "created": {
          "$ref": "#/definitions/DateJSON",
          "description": "Creation date string.",
          "default": ""
        },
        "updated": {
          "$ref": "#/definitions/DateJSON",
          "description": "Updated date string.",
          "default": ""
        },
        "committed": {
          "type": "boolean",
          "description": "Flag to determine if the entity has been committed to storage.",
          "default": false
        },
        "delete": {
          "type": "boolean",
          "description": "If this entity is marked to be deleted.",
          "default": false
        },
        "$owner": {
          "$ref": "#/definitions/Reference",
          "description": "Entity that owns this data."
        },
        "$creator": {
          "$ref": "#/definitions/Reference",
          "description": "Possible user id creator of the entity."
        },
        "$updaters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference"
          },
          "description": "Entities that have updated this."
        }
      },
      "required": [
        "$id",
        "created",
        "updated",
        "committed",
        "delete",
        "$owner",
        "$creator",
        "$updaters"
      ],
      "additionalProperties": false,
      "description": "A common entity object. Entity's are serializable (JSON) objects that can be committed to NoSQL Databases."
    },
    "Reference": {
      "type": "string",
      "description": "A id reference to another document."
    },
    "DateJSON": {
      "type": "string",
      "description": "A string that represents a JSON Date."
    },
    "Reference<User>": {
      "type": "string",
      "description": "A id reference to another document."
    }
  }
}
