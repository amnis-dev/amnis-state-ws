{
  "$id": "core-auth",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "DataScope": {
      "type": "string",
      "enum": [
        "global",
        "owned"
      ],
      "description": "Data scopes."
    },
    "Task": {
      "type": "number",
      "enum": [
        0,
        1,
        2,
        4,
        8
      ],
      "description": "Data tasks."
    },
    "Grant": {
      "type": "object",
      "properties": {
        "key": {
          "type": "string"
        },
        "scope": {
          "$ref": "#/definitions/DataScope"
        },
        "task": {
          "$ref": "#/definitions/Task"
        }
      },
      "required": [
        "key",
        "scope",
        "task"
      ],
      "additionalProperties": false,
      "description": "Grant object."
    },
    "GrantString": {
      "type": "string",
      "description": "Role grant string."
    },
    "AuthScope": {
      "$ref": "#/definitions/State%3CDataScope%3E",
      "description": "A stateful mapping of data access scopes."
    },
    "State<DataScope>": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/DataScope"
      },
      "description": "An ambiguous state."
    },
    "Role": {
      "type": "object",
      "properties": {
        "$id": {
          "$ref": "#/definitions/Reference",
          "description": "Identifier for this entity.",
          "default": ""
        },
        "created": {
          "$ref": "#/definitions/DateJSON",
          "description": "Creation date string.",
          "default": ""
        },
        "updated": {
          "$ref": "#/definitions/DateJSON",
          "description": "Updated date string.",
          "default": ""
        },
        "committed": {
          "type": "boolean",
          "description": "Flag to determine if the entity has been committed to storage.",
          "default": false
        },
        "delete": {
          "type": "boolean",
          "description": "If this entity is marked to be deleted.",
          "default": false
        },
        "$owner": {
          "$ref": "#/definitions/Reference",
          "description": "Entity that owns this data."
        },
        "$creator": {
          "$ref": "#/definitions/Reference",
          "description": "Possible user id creator of the entity."
        },
        "$updaters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference"
          },
          "description": "Entities that have updated this."
        },
        "name": {
          "type": "string",
          "description": "Name of the license."
        },
        "description": {
          "type": "string",
          "description": "A brief description of the license."
        },
        "color": {
          "type": "string",
          "description": "Color that represents this role."
        },
        "grants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/GrantString"
          },
          "description": "Permissions this license grants."
        }
      },
      "required": [
        "$creator",
        "$id",
        "$owner",
        "$updaters",
        "color",
        "committed",
        "created",
        "delete",
        "description",
        "grants",
        "name",
        "updated"
      ],
      "additionalProperties": false,
      "description": "A license is a defined object for granting multiple permissions to perform actions or selections."
    },
    "Entity": {
      "type": "object",
      "properties": {
        "$id": {
          "$ref": "#/definitions/Reference",
          "description": "Identifier for this entity.",
          "default": ""
        },
        "created": {
          "$ref": "#/definitions/DateJSON",
          "description": "Creation date string.",
          "default": ""
        },
        "updated": {
          "$ref": "#/definitions/DateJSON",
          "description": "Updated date string.",
          "default": ""
        },
        "committed": {
          "type": "boolean",
          "description": "Flag to determine if the entity has been committed to storage.",
          "default": false
        },
        "delete": {
          "type": "boolean",
          "description": "If this entity is marked to be deleted.",
          "default": false
        },
        "$owner": {
          "$ref": "#/definitions/Reference",
          "description": "Entity that owns this data."
        },
        "$creator": {
          "$ref": "#/definitions/Reference",
          "description": "Possible user id creator of the entity."
        },
        "$updaters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference"
          },
          "description": "Entities that have updated this."
        }
      },
      "required": [
        "$id",
        "created",
        "updated",
        "committed",
        "delete",
        "$owner",
        "$creator",
        "$updaters"
      ],
      "additionalProperties": false,
      "description": "A common entity object. Entity's are serializable (JSON) objects that can be committed to NoSQL Databases."
    },
    "Reference": {
      "type": "string",
      "description": "A id reference to another document."
    },
    "DateJSON": {
      "type": "string",
      "description": "A string that represents a JSON Date."
    },
    "Permit": {
      "type": "object",
      "properties": {
        "$id": {
          "$ref": "#/definitions/Reference",
          "description": "Identifier for this entity.",
          "default": ""
        },
        "created": {
          "$ref": "#/definitions/DateJSON",
          "description": "Creation date string.",
          "default": ""
        },
        "updated": {
          "$ref": "#/definitions/DateJSON",
          "description": "Updated date string.",
          "default": ""
        },
        "committed": {
          "type": "boolean",
          "description": "Flag to determine if the entity has been committed to storage.",
          "default": false
        },
        "delete": {
          "type": "boolean",
          "description": "If this entity is marked to be deleted.",
          "default": false
        },
        "$owner": {
          "$ref": "#/definitions/Reference",
          "description": "Entity that owns this data."
        },
        "$creator": {
          "$ref": "#/definitions/Reference",
          "description": "Possible user id creator of the entity."
        },
        "$updaters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference"
          },
          "description": "Entities that have updated this."
        },
        "$issuer": {
          "$ref": "#/definitions/Reference",
          "description": "Reference to the entity that issued this permit."
        },
        "$holder": {
          "$ref": "#/definitions/Reference",
          "description": "Owner of the permit that can perform the granted actions."
        },
        "$target": {
          "$ref": "#/definitions/Reference",
          "description": "Reference to the entity that the owner has been granted actions on."
        },
        "grants": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/GrantString"
          },
          "description": "Grants this permit provides."
        }
      },
      "required": [
        "$creator",
        "$holder",
        "$id",
        "$issuer",
        "$owner",
        "$target",
        "$updaters",
        "committed",
        "created",
        "delete",
        "grants",
        "updated"
      ],
      "additionalProperties": false,
      "description": "A permit is a list of grants for a specific reference ID."
    }
  }
}
