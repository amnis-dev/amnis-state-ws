{
  "$id": "state-user",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "User": {
      "$ref": "#/definitions/CoreUser",
      "description": "User information."
    },
    "CoreUser": {
      "type": "object",
      "properties": {
        "$id": {
          "$ref": "#/definitions/Reference",
          "description": "Identifier for this entity.",
          "default": ""
        },
        "created": {
          "$ref": "#/definitions/DateJSON",
          "description": "Creation date string.",
          "default": ""
        },
        "updated": {
          "$ref": "#/definitions/DateJSON",
          "description": "Updated date string.",
          "default": ""
        },
        "committed": {
          "type": "boolean",
          "description": "Flag to determine if the entity has been committed to storage.",
          "default": false
        },
        "delete": {
          "type": "boolean",
          "description": "If this entity is marked to be deleted.",
          "default": false
        },
        "$owner": {
          "$ref": "#/definitions/Reference",
          "description": "Entity that owns this data."
        },
        "$creator": {
          "$ref": "#/definitions/Reference",
          "description": "Possible user id creator of the entity."
        },
        "$updaters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference"
          },
          "description": "Entities that have updated this."
        },
        "name": {
          "type": "string",
          "description": "Name for the user.",
          "default": ""
        },
        "email": {
          "type": "string",
          "description": "Email address",
          "default": ""
        },
        "password": {
          "type": [
            "string",
            "null"
          ],
          "description": "CoreUser password. A null password means another form of auth must be used.",
          "default": "null"
        },
        "organization": {
          "type": "string",
          "description": "Organization this order belongs to."
        },
        "$roles": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference%3CCoreRole%3E"
          },
          "description": "Roles this user has been given."
        },
        "$permits": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference%3CPermit%3E"
          },
          "description": "Special-case permits this user has been bestowed."
        }
      },
      "required": [
        "$creator",
        "$id",
        "$owner",
        "$permits",
        "$roles",
        "$updaters",
        "committed",
        "created",
        "delete",
        "email",
        "name",
        "password",
        "updated"
      ],
      "additionalProperties": false,
      "description": "Data associated to a CoreUser."
    },
    "Entity": {
      "type": "object",
      "properties": {
        "$id": {
          "$ref": "#/definitions/Reference",
          "description": "Identifier for this entity.",
          "default": ""
        },
        "created": {
          "$ref": "#/definitions/DateJSON",
          "description": "Creation date string.",
          "default": ""
        },
        "updated": {
          "$ref": "#/definitions/DateJSON",
          "description": "Updated date string.",
          "default": ""
        },
        "committed": {
          "type": "boolean",
          "description": "Flag to determine if the entity has been committed to storage.",
          "default": false
        },
        "delete": {
          "type": "boolean",
          "description": "If this entity is marked to be deleted.",
          "default": false
        },
        "$owner": {
          "$ref": "#/definitions/Reference",
          "description": "Entity that owns this data."
        },
        "$creator": {
          "$ref": "#/definitions/Reference",
          "description": "Possible user id creator of the entity."
        },
        "$updaters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference"
          },
          "description": "Entities that have updated this."
        }
      },
      "required": [
        "$id",
        "created",
        "updated",
        "committed",
        "delete",
        "$owner",
        "$creator",
        "$updaters"
      ],
      "additionalProperties": false,
      "description": "A common entity object. Entity's are serializable (JSON) objects that can be committed to NoSQL Databases."
    },
    "Reference": {
      "type": "string",
      "description": "A id reference to another document."
    },
    "DateJSON": {
      "type": "string",
      "description": "A string that represents a JSON Date."
    },
    "Reference<CoreRole>": {
      "type": "string",
      "description": "A id reference to another document."
    },
    "Reference<Permit>": {
      "type": "string",
      "description": "A id reference to another document."
    },
    "UserMeta": {
      "$ref": "#/definitions/Meta%3CUser%3E",
      "description": "User collection meta data."
    },
    "Meta<User>": {
      "type": "object",
      "properties": {
        "active": {
          "anyOf": [
            {
              "$ref": "#/definitions/Reference%3CUser%3E"
            },
            {
              "type": "null"
            }
          ],
          "description": "The entity id referencing the active entity."
        },
        "focused": {
          "anyOf": [
            {
              "$ref": "#/definitions/Reference%3CUser%3E"
            },
            {
              "type": "null"
            }
          ],
          "description": "The id representing a focused entity."
        },
        "selection": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference%3CUser%3E"
          },
          "description": "List of ids considered to be selected."
        }
      },
      "required": [
        "active",
        "focused",
        "selection"
      ],
      "additionalProperties": false,
      "description": "Meta information for an entity collection."
    },
    "Reference<User>": {
      "type": "string",
      "description": "A id reference to another document."
    }
  }
}
