{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/StateComplete",
  "definitions": {
    "StateComplete": {
      "type": "object",
      "properties": {
        "user": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/User"
          }
        }
      },
      "additionalProperties": false
    },
    "User": {
      "type": "object",
      "properties": {
        "$id": {
          "$ref": "#/definitions/Reference",
          "description": "Identifier for this entity.",
          "default": ""
        },
        "created": {
          "$ref": "#/definitions/DateJSON",
          "description": "Creation date string.",
          "default": ""
        },
        "updated": {
          "$ref": "#/definitions/DateJSON",
          "description": "Updated date string.",
          "default": ""
        },
        "committed": {
          "type": "boolean",
          "description": "Flag to determine if the entity has been committed to storage.",
          "default": false
        },
        "$creator": {
          "$ref": "#/definitions/Reference",
          "description": "Possible user id creator of the entity."
        },
        "$updaters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference"
          },
          "description": "Users that have updated the entity."
        },
        "displayName": {
          "type": "string",
          "description": "Display name for the user."
        },
        "$licenses": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference%3CLicense%3E"
          },
          "description": "Licences this user has been given."
        },
        "$permits": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference%3CPermit%3E"
          },
          "description": "Special-case permits this user has been bestowed."
        }
      },
      "required": [
        "$creator",
        "$id",
        "$licenses",
        "$permits",
        "$updaters",
        "committed",
        "created",
        "displayName",
        "updated"
      ],
      "additionalProperties": false,
      "description": "Data associated to a User."
    },
    "Reference": {
      "type": "string",
      "description": "A id reference to another document."
    },
    "DateJSON": {
      "type": "string",
      "description": "A string that represents a JSON Date."
    },
    "Reference<License>": {
      "type": "string",
      "description": "A id reference to another document."
    },
    "Reference<Permit>": {
      "type": "string",
      "description": "A id reference to another document."
    }
  }
}
