{
  "$id": "state-profile",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Profile": {
      "type": "object",
      "properties": {
        "$id": {
          "$ref": "#/definitions/Reference",
          "description": "Identifier for this entity.",
          "default": ""
        },
        "created": {
          "$ref": "#/definitions/DateJSON",
          "description": "Creation date string.",
          "default": ""
        },
        "updated": {
          "$ref": "#/definitions/DateJSON",
          "description": "Updated date string.",
          "default": ""
        },
        "committed": {
          "type": "boolean",
          "description": "Flag to determine if the entity has been committed to storage.",
          "default": false
        },
        "delete": {
          "type": "boolean",
          "description": "If this entity is marked to be deleted.",
          "default": false
        },
        "$owner": {
          "$ref": "#/definitions/Reference",
          "description": "Entity that owns this data."
        },
        "$creator": {
          "$ref": "#/definitions/Reference",
          "description": "Possible user id creator of the entity."
        },
        "$updaters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference"
          },
          "description": "Entities that have updated this."
        },
        "$user": {
          "$ref": "#/definitions/Reference%3CUser%3E",
          "description": "User this profile is associated with."
        },
        "nameDisplay": {
          "type": "string",
          "description": "Display name for the profile."
        },
        "nameGiven": {
          "type": "string",
          "description": "Given/First name"
        },
        "nameFamily": {
          "type": "string",
          "description": "Family/Last name",
          "title": "name-family"
        },
        "birthDate": {
          "type": "string",
          "description": "Date of birth."
        },
        "avatar": {
          "$ref": "#/definitions/SURL",
          "description": "Avatar image"
        }
      },
      "required": [
        "$creator",
        "$id",
        "$owner",
        "$updaters",
        "$user",
        "committed",
        "created",
        "delete",
        "nameDisplay",
        "updated"
      ],
      "additionalProperties": false,
      "description": "Profile entity"
    },
    "Entity": {
      "type": "object",
      "properties": {
        "$id": {
          "$ref": "#/definitions/Reference",
          "description": "Identifier for this entity.",
          "default": ""
        },
        "created": {
          "$ref": "#/definitions/DateJSON",
          "description": "Creation date string.",
          "default": ""
        },
        "updated": {
          "$ref": "#/definitions/DateJSON",
          "description": "Updated date string.",
          "default": ""
        },
        "committed": {
          "type": "boolean",
          "description": "Flag to determine if the entity has been committed to storage.",
          "default": false
        },
        "delete": {
          "type": "boolean",
          "description": "If this entity is marked to be deleted.",
          "default": false
        },
        "$owner": {
          "$ref": "#/definitions/Reference",
          "description": "Entity that owns this data."
        },
        "$creator": {
          "$ref": "#/definitions/Reference",
          "description": "Possible user id creator of the entity."
        },
        "$updaters": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference"
          },
          "description": "Entities that have updated this."
        }
      },
      "required": [
        "$id",
        "created",
        "updated",
        "committed",
        "delete",
        "$owner",
        "$creator",
        "$updaters"
      ],
      "additionalProperties": false,
      "description": "A common entity object. Entity's are serializable (JSON) objects that can be committed to NoSQL Databases."
    },
    "Reference": {
      "type": "string",
      "description": "A id reference to another document."
    },
    "DateJSON": {
      "type": "string",
      "description": "A string that represents a JSON Date."
    },
    "Reference<User>": {
      "type": "string",
      "description": "A id reference to another document."
    },
    "SURL": {
      "type": "string",
      "description": "A string that represents a URL. Named SURL (String URL) so it's not confused with the URL object type."
    },
    "ProfileMeta": {
      "$ref": "#/definitions/Meta%3CProfile%3E",
      "description": "Profile collection meta data."
    },
    "Meta<Profile>": {
      "type": "object",
      "properties": {
        "active": {
          "anyOf": [
            {
              "$ref": "#/definitions/Reference%3CProfile%3E"
            },
            {
              "type": "null"
            }
          ],
          "description": "The entity id referencing the active entity."
        },
        "focused": {
          "anyOf": [
            {
              "$ref": "#/definitions/Reference%3CProfile%3E"
            },
            {
              "type": "null"
            }
          ],
          "description": "The id representing a focused entity."
        },
        "selection": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Reference%3CProfile%3E"
          },
          "description": "List of ids considered to be selected."
        }
      },
      "required": [
        "active",
        "focused",
        "selection"
      ],
      "additionalProperties": false,
      "description": "Meta information for an entity collection."
    },
    "Reference<Profile>": {
      "type": "string",
      "description": "A id reference to another document."
    }
  }
}
