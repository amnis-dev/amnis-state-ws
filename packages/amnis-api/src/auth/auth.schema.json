{
  "$id": "auth",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$ref": "#/definitions/ApiAuthBodies",
  "definitions": {
    "ApiAuthBodies": {
      "type": "object",
      "properties": {
        "login": {
          "$ref": "#/definitions/ApiAuthLoginBody"
        },
        "platform": {
          "$ref": "#/definitions/ApiAuthPlatformBody"
        },
        "authorize": {
          "$ref": "#/definitions/ApiAuthAuthorizeBody"
        }
      },
      "additionalProperties": false
    },
    "ApiAuthLoginBody": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string"
        },
        "password": {
          "type": "string"
        }
      },
      "required": [
        "username",
        "password"
      ],
      "additionalProperties": false,
      "description": "Payload for a login request."
    },
    "ApiAuthPlatformBody": {
      "type": "object",
      "properties": {
        "platform": {
          "type": "string",
          "enum": [
            "microsoft",
            "twitter"
          ]
        },
        "token": {
          "type": "string"
        }
      },
      "required": [
        "platform",
        "token"
      ],
      "additionalProperties": false,
      "description": "Payload for a login request."
    },
    "ApiAuthAuthorizeBody": {
      "type": "object",
      "properties": {
        "method": {
          "type": "string",
          "enum": [
            "msgraph",
            "twitter"
          ]
        },
        "jwt": {
          "$ref": "#/definitions/JWTEncoded"
        }
      },
      "required": [
        "method",
        "jwt"
      ],
      "additionalProperties": false,
      "description": "Payload for an alternative method of authorization."
    },
    "JWTEncoded": {
      "type": "string",
      "description": "String representation of a jwt encoded token."
    }
  }
}
